@model StuTeaLog;
@{
    Layout = null; // Layout'u devre dışı bırak
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Öğrenci Bilgilendirme Sistemi - Giriş</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,800" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <h2>Öğrenci ve Öğretmen Girişi</h2>
    <div class="container" id="container">
        <!-- Öğretmen Giriş Formu -->
        <div class="form-container sign-up-container">
            <form asp-action="TeacherLogin" method="post">
                <h1>Öğretmen Hesabı</h1>
                <span>veya e-posta ile giriş yap</span>
                <input asp-for="Email" type="email" placeholder="E-posta" />
                <input asp-for="Password" type="password" placeholder="Şifre" />
                <button type="submit">Giriş Yap</button>
            </form>
        </div>
        <!-- Öğrenci Giriş Formu -->
        <div class="form-container sign-in-container">
            <form asp-action="StudentList" method="post">
                <h1>Öğrenci Girişi</h1>
                <span>veya hesabınla giriş yap</span>
                <input asp-for="Email" type="email" placeholder="E-posta" />
                <input asp-for="Password" type="password" placeholder="Şifre" />
                <a href="#">Şifreni mi unuttun?</a>
                <button type="submit">Giriş Yap</button>
            </form>
        </div>
        <!-- Overlay Panel -->
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Hoş Geldiniz!</h1>
                    <p>Öğrenci girişi için buraya geçebilirsiniz</p>
                    <button class="ghost" id="signIn">Öğrenci Girişi</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Merhaba, Öğretmen!</h1>
                    <p>Öğretmen girişi için buraya geçebilirsiniz</p>
                    <button class="ghost" id="signUp">Öğretmen Girişi</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/your-kit-id.js" crossorigin="anonymous"></script>
    <script src="~/js/login.js"></script>
</body>
</html>