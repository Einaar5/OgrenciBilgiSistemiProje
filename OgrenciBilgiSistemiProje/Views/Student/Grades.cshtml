
@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    var lessons = ViewBag.Lessons as List<Lesson>;
    var quizzes = ViewBag.Quizzes as List<Quiz>;
    var grades = ViewBag.Grades as List<Grade>;
}

<h2>Notlarım</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Ders</th>
            @foreach (var quiz in quizzes.GroupBy(q => q.Lesson.LessonId).SelectMany(g => g))
            {
                <th>@quiz.QuizName</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in lessons)
        {
            <tr>
                <td>@lesson.LessonName</td>
                @foreach (var quiz in quizzes.Where(q => q.Lesson.LessonId == lesson.LessonId))
                {
                    var grade = grades.FirstOrDefault(g => g.QuizId == quiz.Id);
                    <td>@(grade?.Score ?? 0)</td>
                }
            </tr>
        }
    </tbody>
</table>
