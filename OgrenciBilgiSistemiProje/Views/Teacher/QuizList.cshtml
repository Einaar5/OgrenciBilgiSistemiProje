@model List<Quiz>
@{
	Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
	int lessonId = Convert.ToInt32(ViewBag.LessonId);
}

<div>
    <a class="btn btn-danger" asp-controller="Teacher" asp-route-id="@lessonId" asp-action="CreateQuiz">Sınav Oluştur</a>
</div>

<div class="container mt-4">
   
        <table class="table">
           <tr>
                <th>Sınav No</th>
                <th>Sınav Adı</th>
                <th>Sınav Ağırlığı</th>
                <th>Sınav Dersi </th>
                <th>İşlemler</th>
           </tr>
        @foreach (var quiz in Model)
        {
           <tr>
                <td>@quiz.Id</td>
                <td>@quiz.QuizName</td>
                <td>@quiz.QuizWeight</td>
                <td>@quiz.Lesson.LessonName</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Teacher" asp-action="EditQuiz" asp-route-id="@quiz.Id">Sınav Düzenle</a>
                    <a class="btn btn-outline-danger" asp-controller="Teacher" asp-action="DeleteQuiz" onclick="return confirm('(@quiz.QuizName) Adlı Sınavı Silmek İstediğinize Emin Misiniz ?');" asp-route-id="@quiz.Id">Sınav Sil</a>
                </td>
           </tr>
        }
        </table>
       
    
</div>

