@model DepartmentDto
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2>Bölüm Düzenle</h2>
        <form asp-action="EditDepartment" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" /> <!-- DTO'daki Id property'sini kullanıyoruz -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Bölüm Adı</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Kontenjan</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Quota" />
                    <span asp-validation-for="Quota" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Gönder</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Admin" asp-action="DepartmentList" role="button">
                        İptal
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> <!-- Doğrulama script'lerini ekliyoruz -->
}