@model StudentDto
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2>Öğrenci Ekle</h2>
		<form asp-action="AddStudent" asp-controller="Admin" method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Ad</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="StudentName" />
					<span asp-validation-for="StudentName" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Soyad</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="StudentSurname" />
					<span asp-validation-for="StudentSurname" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Email</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="StudentEmail" />
					<span asp-validation-for="StudentEmail" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Şifre</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Password" />
					<span asp-validation-for="Password" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
				</div>
			</div>


			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Telefon</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="StudentPhone" />
					<span asp-validation-for="StudentPhone" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Adres</label>
				<div class="col-sm-8">
					<textarea class="form-control" asp-for="StudentAddress"></textarea>
					<span asp-validation-for="StudentAddress" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Cinsiyet</label>
				<div class="col-sm-8">
					<select class="form-select" asp-for="StudentGender">
						<option value="Erkek">Erkek</option>
						<option value="Kız">Kız</option>
					</select>
					<span asp-validation-for="StudentGender" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Resim</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ImageFile" />
					<span asp-validation-for="ImageFile" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Bölüm</label>
				<div class="col-sm-8">
					<select class="form-select" asp-for="DepartmentId">
						<option value="">Lütfen bir bölüm seçin</option>
						@if (ViewData["Departments"] is List<OgrenciBilgiSistemiProje.Models.Department> departmentList)
						{
							@foreach (var department in departmentList)
							{
								<option value="@department.Id">@department.Name</option>
							}
						}
					</select>

					@if (ViewBag.QuotaWarning != null)
					{
						<div class="alert alert-warning mt-3">
							@ViewBag.QuotaWarning
						</div>
					}
					
				</div>
				<div>
					
				</div>
			</div>

			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Gönder</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-controller="Admin" asp-action="StudentList" role="button">İptal</a>
				</div>
			</div>

		</form>
	</div>
</div>