@model OgrenciBilgiSistemiProje.Models.GradeDto

<h2>Not Ekle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="StudentId">Öğrenci</label>
        <select asp-for="StudentId" class="form-control">
            @foreach (var student in ViewBag.Students)
            {
                <option value="@student.StudentId">@student.StudentName @student.StudentSurname</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="LessonId">Ders</label>
        <select asp-for="LessonId" class="form-control">
            @foreach (var lesson in ViewBag.Lessons)
            {
                <option value="@lesson.LessonId">@lesson.LessonName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Midterm">Vize Notu</label>
        <input asp-for="Midterm" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Final">Final Notu</label>
        <input asp-for="Final" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>