@model OgrenciBilgiSistemiProje.Models.StudentAttendanceReportView

@{
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<h2>Devamsızlık Raporu</h2>

@if (Model.LessonReports.Any())
{
