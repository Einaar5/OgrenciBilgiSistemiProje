        <thead>
            <tr>
                <th>Ders Adı</th>
                <th>Devamsız Saat Sayısı</th>
                <th>Devamsızlık Oranı (%)</th>
               @*  <th>Detaylar</th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model.LessonReports)
            {
                <tr>
                    <td>@report.LessonName</td>
                    <td>@report.AbsenceCount</td>
                    <td>@report.AbsenceRate.ToString("F2")</td>
