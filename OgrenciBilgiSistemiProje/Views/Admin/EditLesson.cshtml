@model LessonDto
@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2>Öğrenci Ekle</h2>
		<form method="post" enctype="multipart/form-data">

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Ders No (ID)</label>
				<div class="col-sm-8">
					<input class="form-control-plaintext" value="@ViewData["LessonId"]" />
				</div>
			</div>


			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Ders Adı</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="LessonName" />
					<span asp-validation-for="LessonName" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
				</div>
			</div>

			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Credit</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Credit" />
					<span asp-validation-for="Credit" class="text-danger"></span> <!--Validation Hatası Olursa Burada Gösterilecektir.-->
				</div>
			</div>

			<div class="row">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Gönder</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-controller="Admin" asp-action="LessonList" role="button">
						<!--asp-action = "Index" Index Sayfasına Yönlendirme Yapılacaktır. Çünkü Ürünler Listesine Geri Dönülecektir.-->
						İptal
					</a>
				</div>
			</div>

		</form>
	</div>
</div>